<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>注册</title>
</head>
<body>
    <form>
      <input type="text" id="name" placeholder="姓名">
      <input type="text" id="uname" placeholder="账号">
      <input type="text" id="pwd" placeholder="密码">
        <input type="button" value="注册" onclick="register(event); return false;">
    </form>
    <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://cdn.bootcss.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script>
        function register(e){
            var name = $('#name').val(),
                    uname = $('#uname').val(),
                    pwd   = $('#pwd').val();
            $.post('/users/register',{
                name : name,
                uname : uname,
                pwd   : pwd
            },function(data){
                if(data.code && data.code == 200){
                    window.location.href = data.originalUrl;
                }else{
                    alert(data.message);
                }
            });
        }
    </script>
</body>
</html>